
<header>

    <div class="container">
        <div class="left_part">
            <div class="logo mgb_20">
            	<%= link_to "", users_index_path %>
            </div>
        </div>
        <div class="right_part">
            <% if user_signed_in? %>
                <div class="profile_button">
                    <i class="icon-perso"></i>
                    <%= link_to "MY PROFILE", {controller: "pages", action: "profile", id: current_user.id }, class: 'classexp' %>
                </div>

            <% end %>
        </div>

        <div class="profile_user clear ">
        	<div class="header_profil_user">

	          	<div class="user_logout">

	          		<!-- <%= link_to('Logout', destroy_user_session_path, :method => :delete) %> -->
                    <% if @user.id == current_user.id %>
                        <%= link_to destroy_user_session_path, :method => :delete do %>
    	          		   <i class="icon-off"></i>
                        <% end %>
                    <% end %>
	          	</div>
	        	<div class="user_picture">
	        			<%= image_tag(@user.avatar.url(:medium)) %>
	        	</div>
	        	<div class="user_edit_profile">
                    <% if @user.id == current_user.id %>
                        <%= link_to edit_user_registration_path do %>
    	        	        <i class="icon-edit"></i>
                        <% end %>
                    <% end %>
	        	</div>
		    </div>
        		
            <div class="user_name">
            	<%= @user.username %>
            </div>
            <hr>
            <div class="user_description">
    	        <p><%= @user.description %></p>
    	    </div>

    	    <div class="follow">
    	    	<div class="following">
    	    		<%= @user_following.count %> Following
    	    	</div>
    	    	<div class="follower">
    	    		<%= @user_followers.count %> Followers
    	    	</div>
    	    </div>
        </div>
    </div>
</header>


