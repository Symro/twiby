<div class="yell_index clear">
    <div class="container">
    	<p class="users_twib">My Twibs <span class="users_nb_twib">- 3 465</span></p>
    	<ul class="yell_list clear">	
			<% if @user_tweet.any?  %>
	  			<% @user_tweet.each do |tweet| %>
	   			<li>
	   				<div class="user_picture">
	   				      <div class="user_picts"></div>
	   				</div>

	   				<div class="user_content">
	   				    <div class="head_yell">
	   				        <div class="user_name">
	   				            <%= link_to tweet.user.username, controller: "pages", action: "profile", id: tweet.user.id %>
	   				        </div>
	   				        <p class="yell_time">
	   				        	published on <%= tweet.created_at.strftime('%m/%d/%Y') %>
	   				        </p>
	   				    </div>
	   				    <div class="user_yell">
	   				        <%= tweet.content %>
	   				        <div class="user_actions">
	   				            <a href="#"><i class="icon-star"></i></a>
	   				            <p>12</p>
	   				            <a href="#"><i class="icon-trash"></i></a>
	   				        </div>
	   				    </div>
	  			<% end %>
			<% else %>
	  			Never Tweeted :(
				</li>
			<% end %>
		</ul>
	</div>
</div>


