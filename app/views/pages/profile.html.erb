<div class="yell_index clear">
    <div class="container">

		<button class="yell_something">Yell something !</button>

		<!-- form to tweet -->
		<div class="yell_form mgb_30">
		    <%= simple_form_for @new_tweet, :url => "/tweets", :method => :post do |f| %>
		        <%= f.text_area :content, placeholder: 'Write something' %>
		        <p class="nb_caract">140</p>
		        <%= f.button :submit %>
		    <% end %>
		</div>


    	<p class="users_twib"><%= (@user.id == current_user.id)? "My" : "Her" %> Twibs <span class="users_nb_twib">- 3 465</span></p>
    	<ul class="yell_list clear">	
			<% if @user_tweet.any?  %>
	  			<% @user_tweet.each do |tweet| %>
	   			<li>
	   				<div class="user_picture">
	   				    <div class="user_picts"><%= image_tag(tweet.user.avatar.url(:small)) %></div>
	   				</div>

	   				<div class="user_content">
	   				    <div class="head_yell">
	   				        <div class="user_name">
	   				            <%= link_to tweet.user.username, controller: "pages", action: "profile", id: tweet.user.id %>
	   				        </div>
	   				        <p class="yell_time">
	   				        	<%= tweet.created_at.strftime('%m/%d/%Y %H:%M') %>
	   				        </p>
	   				    </div>
	   				    <div class="user_yell">
	   				        <%= tweet.content %>
	   				        <div class="user_actions">
	   				            <a href="#"><i class="icon-star"></i></a>
	   				            <p>12</p>
	   				            <a href="#"><i class="icon-trash"></i></a>
	   				        </div>
	   				    </div>
	  			<% end %>
			<% else %>
	  			Never Tweeted :(
				</li>
			<% end %>
		</ul>
	</div>
</div>


